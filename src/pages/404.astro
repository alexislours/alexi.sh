---
import kingfisher from "@assets/error/kingfisher.png";
import { Picture } from "astro:assets";
import Head from "@components/Head.astro";
---

<Head
  title="404"
  description="Looks like the bird already left!"
/>
<main class="h-screen w-screen flex flex-col items-center justify-center gap-4">
  <Picture
    src={kingfisher}
    alt="Logo"
    width={500}
    densities={[1, 2]}
    fallbackFormat="png"
    formats={["avif", "webp"]}
    decoding="async"
    loading="lazy"
    class="max-w-[90%] sm:max-w-[500px]"
  />
  <h1 class="text-7xl font-bold">404</h1>
  <a
    href="/"
    class="border rounded-lg px-6 py-2 text-xl font-semibold">
    Go Home
  </a>
</main>
