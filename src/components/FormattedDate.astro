---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time
  datetime={date.toISOString()}
  class="text-sm font-medium leading-6 text-zinc-500 dark:text-zinc-400">
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
