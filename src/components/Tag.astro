---
interface Props {
  tag: string;
}

const { tag } = Astro.props;
---

<a
  href={"/blog/tag/" + tag.toLowerCase()}
  class="mr-2 mt-2 inline-block rounded-full bg-gray-200 px-3 py-1 text-sm font-semibold text-gray-700 motion-safe:transition-colors motion-safe:hover:bg-gray-100 dark:bg-zinc-700 dark:text-gray-200 motion-safe:hover:dark:bg-zinc-600"
  >{tag}</a
>
